<div class="w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @event %>

    <%= link_to 'Edit', edit_event_path(@event), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium text-white" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy', event_path(@event), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-600 font-medium text-white" %>
    </div>
    <%= link_to 'Back', events_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-950 inline-block font-medium text-white" %>
  </div>
</div>