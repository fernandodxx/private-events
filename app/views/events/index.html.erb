<div class="w-full h-full">

  <div class="flex justify-center flex-wrap gap-4" id="events" >
    <% @events.each do |event| %>
      <div class=" text-center my-3 border rounded-lg shadow-lg hover:bg-gray-100">
        <a href="/events/<%= event.id %>">
          <%= image_tag(event.image_url, class:'rounded-lg ' )%>
          <h1 class="font-bold text-2xl my-3 hover:underline"><%= event.title %></h1>
        </a>
        <p class="my-3 font-bold"><%= event.date %></p>
      </div>
    <% end %>
  </div>
</div>
