<div id="<%= dom_id event%>" class="flex justify-between my-8 rounded-md shadow-lg bg-slate-900" >

  
  <div class="self-center  order-last">
      <%= image_tag(event.image_url, size: "500x500", class:"rounded-md") %>
  </div>
  
  <div class="pl-20 self-center text-white">
    <a href="<%= event_path(event) %>">
      <h1 class=" text-2xl font-bold leading-snug hover:underline"><%= event.title%></h1>
    </a>
    <p class="text-xs uppercase font-bold tracking-wider my-3"><%= event.description%> </p>
    <p class="mt-2 text-sm ">Date: <%= event.date%></p>
  </div>
 
  
  <% if action_name != "show" %>
    <%= link_to "Edit", edit_event_path(event), class: "ml-2 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium "%>
  <% end %>
</div>
